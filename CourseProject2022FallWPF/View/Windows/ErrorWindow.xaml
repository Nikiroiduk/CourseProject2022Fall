<Window x:Class="CourseProject2022FallWPF.View.ErrorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        Title="Error" Height="150" Width="400">
    <Grid>
        <Label Content="{Binding ErrorMessage}" FontSize="15" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="30"></Label>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="20">
            <Button x:Name="Btn" Content="Ok" Click="Btn_Click"/>
            <Button Margin="15, 0, 0, 0" Content="Cancel" Click="Btn_Click"/>
        </StackPanel>
    </Grid>
</Window>
