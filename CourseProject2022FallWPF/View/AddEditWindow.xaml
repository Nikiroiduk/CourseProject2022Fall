<Window x:Class="CourseProject2022FallWPF.View.AddEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CourseProject2022FallWPF.ViewModel"
        mc:Ignorable="d"
        x:Name="AddEditWindowName"
        Title="AddEditWindow" Height="450" Width="800">
    <Window.DataContext>
        <local:MainWindowViewModel/>
    </Window.DataContext>
    <DockPanel>
        <Frame DockPanel.Dock="Top" Content="{Binding ActivePage}" NavigationUIVisibility="Hidden"></Frame>
        <Grid DockPanel.Dock="Bottom">
            <Button x:Name="Apply" Content="Apply" Grid.Column="0" Click="Apply_Click"/>
            <Button x:Name="Discard" Content="Discard" Grid.Column="1" Click="Discard_Click"/>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
        </Grid>
    </DockPanel>
</Window>
